# EditorConfig helps maintain consistent coding styles
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false
